{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "types": ["node", "vitest"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler"
  },
  "include": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "vitest.config.ts"
  ]
}
