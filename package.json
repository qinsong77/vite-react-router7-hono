    "isbot": "^5.1.21",
    "lucide-react": "^0.473.0",
    "next-themes": "^0.4.4",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.3",
