  "packageManager": "pnpm@9.15.0",
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "eslint",
    "*.{js,css,md,ts,tsx,jsx}": "prettier --write"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "build": "react-router build",
    "dev": "cross-env NODE_ENV=development node server.js",
    "start": "node server.js",
    "type-check": "react-router typegen && tsc && && echo \"Types check passed\"",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint-and-format:fix": "eslint src --fix && prettier . --write",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "turbo:check": "turbo lint format type-check test",
    "turbo:build": "turbo build"
  },
  "dependencies": {
    "@react-router/express": "^7.0.2",
