    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.16",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3",
    "vite": "^6.0.3",
