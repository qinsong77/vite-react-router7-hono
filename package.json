{
  "name": "vite-react-router7-hono",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.15.4",
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "eslint",
    "*.{js,css,md,ts,tsx,jsx}": "prettier --write"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:push": "dotenv -- drizzle-kit generate",
    "build": "react-router build",
    "dev": "cross-env NODE_ENV=development dotenv -- node server.js | pino-pretty",
    "start": "cross-env NODE_ENV=production dotenv -- node server.js",
    "type-check": "react-router typegen && tsc && echo \"Types check passed\"",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint-and-format:fix": "eslint app server --fix && prettier . --write",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "turbo:check-all": "turbo lint format type-check test",
    "turbo:build": "turbo build"
  },
